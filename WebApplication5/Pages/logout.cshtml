@page
@model WebApplication5.Pages.logoutModel
@{
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<form method="post">
<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Logout</h1>
                <p>
                    <button class="btn btn-primary" asp-page-handler="Logout">Yes</button>
                    <button class="btn btn-light m-lg-5 border-dark" asp-page-handler="DontLogout">No</button>
                </p
                </div>
        </div>
    </div>
</div>
</form>